<h1>Search</h1>
<hr />

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3 form-group">
    <label class="col-sm-1 control-label">Page</label>
    <input id="pages-value" type="text" class="form-control" placeholder="Page Name">
  </div>

  <div class="col-md-3 form-group">
    <label class="col-sm-1 control-label">Project</label>
    <%= select_tag "project", options_for_select(@projects), { :class => 'form-control' } %>
  </div>
</div>
<div class="row pad-below">
  <div class="col-md-1"></div>
  <div class="col-md-3 form-group">
    <label class="col-sm-1 control-label">Month</label>
    <%= select_tag "month", options_for_select(@months), { :class => 'form-control' } %>
  </div>

  <div class="col-md-3 form-group">
    <label class="col-sm-1 control-label">Day</label>
    <%= select_tag "day", options_for_select(@days), { :class => 'form-control' } %>
  </div>

  <div class="col-md-3 form-group">
    <label class="col-sm-1 control-label">Year</label>
    <%= select_tag "year", options_for_select(@years), { :class => 'form-control' } %>
  </div>

  <div class="col-md-1 form-group">
    <label class="col-sm-1 control-label">&nbsp;</label>
    <button type="submit" class="btn btn-default form-control" onClick="runSearch()">Go!</button>
  </div>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-11">
    <div class="gray-back">
      <div id="search" class="cust-graph">
        <img src="/assets/loading.gif" id="loading" class="pull-right" style="display: none;" />
        <div id="suggest">
          <p class="text-center phat-vert">Search for a specific page above.</p>
        </div>
      </div>
    </div>
  </div>
</div>

