<h1>Compare</h1>
<hr />

<div class="row pad-below">
  <div class="col-md-1"></div>
  <div class="col-md-11">
    <div class="pad-below">
      <div class="gray-back">
        <div id="histogram" class="cust-graph"></div>
      </div>
    </div>

    <ul class="nav nav-tabs nav-justified pad-below">
      <li id="pom-tab" role="presentation" class="active"><a onClick="toggleTab('pom')">Page Over Months</a></li>
      <li id="ppm-tab" role="presentation"><a onClick="toggleTab('ppm')">Pages Per Month</a></li>
    </ul>
  </div>
</div>

<div class="row" id="page-over-months">
  <div class="row pad-below">
    <div class="col-md-4"></div>
    <div class="col-md-4 form-group">
      <label class="col-sm-1 control-label">Page</label>
      <input id="pages-value" type="text" class="form-control" placeholder="Page Name">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-primary">Red</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Month</label>
          <%= select_tag "red-month", options_for_select(@months), { :class => 'form-control' } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "red-year", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-danger">Blue</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Month</label>
          <%= select_tag "blue-month", options_for_select(@months), { :class => 'form-control' } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "blue-year", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">&nbsp;</div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-default" onClick="compareData()">Compare!</button>
    </div>
  </div>
</div>






