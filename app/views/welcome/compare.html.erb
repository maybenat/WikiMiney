<h1>Compare</h1>
<hr />

<div class="row pad-below">
  <div class="col-md-1"></div>
  <div class="col-md-11">
    <div class="pad-below">
      <div class="gray-back">
        <div id="compare" class="cust-graph">
          <img src="/assets/loading.gif" id="loading" class="pull-right" style="display: none;" />
          <div id="suggest">
            <p class="text-center phat-vert">Make a selection below for comparisons.</p>
          </div>
        </div>
      </div>
    </div>

    <ul class="nav nav-tabs nav-justified pad-below">
      <li id="pom-tab" role="presentation" class="active"><a onClick="toggleTab('pom')">Same Page - Different Months</a></li>
      <li id="ppm-tab" role="presentation"><a onClick="toggleTab('ppm')">Same Month - Different Pages</a></li>
    </ul>
  </div>
</div>

<div class="row" id="page-over-months">
  <div class="row pad-below">
    <div class="col-md-4"></div>
    <div class="col-md-4 form-group">
      <label class="col-sm-1 control-label">Page</label>
      <input id="page-value" type="text" class="form-control" placeholder="Page Name">
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-danger disabled pull-right">Red</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Month</label>
          <%= select_tag "red-month-value", options_for_select(@months), { :class => 'form-control' } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "red-year-value", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-primary disabled pull-right">Blue</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Month</label>
          <%= select_tag "blue-month-value", options_for_select(@months), { :class => 'form-control' } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "blue-year-value", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">&nbsp;</div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-default" onClick="compMo()">Compare!</button>
    </div>
  </div>
</div>






<div class="row" id="pages-per-month" style="display: none;">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 form-group">
      <label class="col-sm-1 control-label">Month</label>
      <%= select_tag "month-value", options_for_select(@months), { :class => 'form-control' } %>
    </div>
  </div>
  <div class="row pad-below">
    <div class="col-md-4"></div>
    <div class="col-md-4 form-group">
      <label class="col-sm-1 control-label">Year</label>
      <%= select_tag "year-value", options_for_select(@years), { :class => 'form-control' } %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-danger disabled pull-right">Red</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Page</label>
          <input id="red-page-value" type="text" class="form-control" placeholder="Page Name">
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <div class="row">
        <button type="button" class="btn btn-primary disabled pull-right">Blue</button>
      </div>
      <hr />
      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Page</label>
          <input id="blue-page-value" type="text" class="form-control" placeholder="Page Name">
        </div>
      </div>
    </div>
  </div>

  <div class="row">&nbsp;</div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-default" onClick="compPa()">Compare!</button>
    </div>
  </div>
</div>
