        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "blue-year", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">&nbsp;</div>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-default" onClick="compareData()">Compare!</button>
    </div>
  </div>
</div>






