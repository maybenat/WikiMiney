          <%= select_tag "red-month", options_for_select(@months), { :class => 'form-control' } %>
        </div>
      </div>

      <div class="row">
        <div class="form-group">
          <label class="col-sm-1 control-label">Year</label>
          <%= select_tag "red-year", options_for_select(@years), { :class => 'form-control' } %>
        </div>
      </div>
    </div>
